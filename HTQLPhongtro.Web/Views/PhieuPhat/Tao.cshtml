@model HTQLPhongtro.Web.Models.PhieuPhatTaoYeuCau

@{
    ViewData["Title"] = "Thêm phiếu phạt";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Tao" method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Mã hợp đồng <span class="text-danger">*</span></label>
            <input asp-for="MaHopDong" class="form-control" type="number" />
            <span asp-validation-for="MaHopDong" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mã quy định phạt</label>
            <input asp-for="MaQuyDinhPhat" class="form-control" type="number" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Lý do <span class="text-danger">*</span></label>
            <input asp-for="LyDo" class="form-control" />
            <span asp-validation-for="LyDo" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Số tiền <span class="text-danger">*</span></label>
            <input asp-for="SoTien" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="SoTien" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày phạt <span class="text-danger">*</span></label>
            <input asp-for="NgayPhat" class="form-control" type="date" />
            <span asp-validation-for="NgayPhat" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

