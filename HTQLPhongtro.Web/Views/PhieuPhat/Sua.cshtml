@model HTQLPhongtro.Web.Models.PhieuPhatCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa phiếu phạt";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaPhieuPhat"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaPhieuPhat"]" />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Lý do</label>
            <input asp-for="LyDo" class="form-control" />
            <span asp-validation-for="LyDo" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Số tiền</label>
            <input asp-for="SoTien" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="SoTien" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Unpaid">Unpaid</option>
                <option value="Paid">Paid</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày thanh toán</label>
            <input asp-for="NgayThanhToan" class="form-control" type="date" />
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

