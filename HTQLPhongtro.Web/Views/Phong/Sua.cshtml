@model HTQLPhongtro.Web.Models.PhongCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa phòng";
    var maPhong = (int)(ViewData["MaPhong"] ?? 0);
}

<h2>@ViewData["Title"] (#@maPhong)</h2>

<form asp-action="Sua" asp-route-id="@maPhong" method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Tên phòng</label>
            <input asp-for="TenPhong" class="form-control" />
            <span asp-validation-for="TenPhong" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Giá thuê</label>
            <input asp-for="GiaThue" class="form-control" />
            <span asp-validation-for="GiaThue" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Số người tối đa</label>
            <input asp-for="SoNguoiToiDa" class="form-control" />
            <span asp-validation-for="SoNguoiToiDa" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>


