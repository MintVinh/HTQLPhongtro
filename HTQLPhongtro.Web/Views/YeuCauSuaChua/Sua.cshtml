@model HTQLPhongtro.Web.Models.YeuCauSuaChuaCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa yêu cầu sửa chữa";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaYeuCau"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaYeuCau"]" />
    <div class="row g-3">
        <div class="col-md-12">
            <label class="form-label">Tiêu đề</label>
            <input asp-for="TieuDe" class="form-control" />
            <span asp-validation-for="TieuDe" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mức độ</label>
            <select asp-for="MucDo" class="form-select">
                <option value="Normal">Normal</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Pending">Pending</option>
                <option value="Processing">Processing</option>
                <option value="Completed">Completed</option>
                <option value="Cancelled">Cancelled</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày xử lý</label>
            <input asp-for="NgayXuLy" class="form-control" type="datetime-local" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày hoàn thành</label>
            <input asp-for="NgayHoanThanh" class="form-control" type="datetime-local" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Người xử lý</label>
            <input asp-for="NguoiXuLy" class="form-control" type="number" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Chi phí</label>
            <input asp-for="ChiPhi" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ChiPhi" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

