@model HTQLPhongtro.Web.Models.QuyDinhPhatCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa quy định phạt";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaQuyDinh"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaQuyDinh"]" />
    <div class="row g-3">
        <div class="col-md-12">
            <label class="form-label">Loại vi phạm <span class="text-danger">*</span></label>
            <input asp-for="LoaiViPham" class="form-control" />
            <span asp-validation-for="LoaiViPham" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mức phạt <span class="text-danger">*</span></label>
            <input asp-for="MucPhat" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="MucPhat" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Đơn vị <span class="text-danger">*</span></label>
            <input asp-for="DonVi" class="form-control" />
            <span asp-validation-for="DonVi" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label class="form-label">Trạng thái</label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Hoạt động</option>
                <option value="false">Không hoạt động</option>
            </select>
        </div>
        <div class="col-12">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

