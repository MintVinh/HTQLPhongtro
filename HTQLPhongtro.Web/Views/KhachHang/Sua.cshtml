@model HTQLPhongtro.Web.Models.KhachHangCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa khách hàng";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaKhach"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaKhach"]" />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Mã tài khoản</label>
            <input asp-for="MaTaiKhoan" class="form-control" type="number" />
            <span asp-validation-for="MaTaiKhoan" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Họ tên <span class="text-danger">*</span></label>
            <input asp-for="HoTen" class="form-control" />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">CCCD <span class="text-danger">*</span></label>
            <input asp-for="Cccd" class="form-control" />
            <span asp-validation-for="Cccd" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Số điện thoại <span class="text-danger">*</span></label>
            <input asp-for="Sdt" class="form-control" />
            <span asp-validation-for="Sdt" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày sinh</label>
            <input asp-for="NgaySinh" class="form-control" type="date" />
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label class="form-label">Địa chỉ</label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Nghề nghiệp</label>
            <input asp-for="NgheNghiep" class="form-control" />
            <span asp-validation-for="NgheNghiep" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

