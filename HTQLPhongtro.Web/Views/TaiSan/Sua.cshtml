@model HTQLPhongtro.Web.Models.TaiSanCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa tài sản";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaTaiSan"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaTaiSan"]" />
    <div class="row g-3">
        <div class="col-md-12">
            <label class="form-label">Tên tài sản <span class="text-danger">*</span></label>
            <input asp-for="TenTaiSan" class="form-control" />
            <span asp-validation-for="TenTaiSan" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Đơn vị tính</label>
            <input asp-for="DonViTinh" class="form-control" />
            <span asp-validation-for="DonViTinh" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Giá trị</label>
            <input asp-for="GiaTri" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GiaTri" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

