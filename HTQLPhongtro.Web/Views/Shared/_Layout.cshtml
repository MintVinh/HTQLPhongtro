<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HTQLPhongtro.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HTQLPhongtro.Web.styles.css" asp-append-version="true" />
</head>
<body class="nen-mem">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HTQLPhongtro.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Quản lý
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Phong" asp-action="Index">Phòng</a></li>
                                    <li><a class="dropdown-item" asp-controller="LoaiPhong" asp-action="Index">Loại phòng</a></li>
                                    <li><a class="dropdown-item" asp-controller="KhachHang" asp-action="Index">Khách hàng</a></li>
                                    <li><a class="dropdown-item" asp-controller="HopDong" asp-action="Index">Hợp đồng</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="TaiSan" asp-action="Index">Tài sản</a></li>
                                    <li><a class="dropdown-item" asp-controller="QuyDinhPhat" asp-action="Index">Quy định phạt</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Hóa đơn & Thanh toán
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown2">
                                    <li><a class="dropdown-item" asp-controller="HoaDonThue" asp-action="Index">Hóa đơn thuê</a></li>
                                    <li><a class="dropdown-item" asp-controller="ChiSoDienNuoc" asp-action="Index">Chỉ số điện nước</a></li>
                                    <li><a class="dropdown-item" asp-controller="PhieuPhat" asp-action="Index">Phiếu phạt</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown3" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Khác
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown3">
                                    <li><a class="dropdown-item" asp-controller="YeuCauSuaChua" asp-action="Index">Yêu cầu sửa chữa</a></li>
                                    <li><a class="dropdown-item" asp-controller="ThongBao" asp-action="Index">Thông báo</a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <span class="nav-link">Xin chào, @User.Identity!.Name</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-controller="TaiKhoan" asp-action="DangXuat" method="post" class="d-inline">
                                        <button class="btn btn-link nav-link" type="submit">Đăng xuất</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="TaiKhoan" asp-action="DangNhap">Đăng nhập</a>
                                </li>
                            }
                        </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HTQLPhongtro.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
