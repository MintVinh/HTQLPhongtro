@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6">
            <div class="khung-dang-nhap p-4">
                <div class="text-center mb-3">
                    <div class="bieu-tuong mb-2" style="margin: 0 auto;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" viewBox="0 0 16 16">
                          <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                        </svg>
                    </div>
                    <h3 class="m-0">@ViewData["Title"]</h3>
                    <div class="phan-tieu-de">Quản lý hệ thống phòng trọ</div>
                </div>

                <form asp-action="DangNhap" method="post" class="mt-3">
                    <div class="mb-3">
                        <label class="form-label">Tài khoản</label>
                        <input name="username" class="form-control" value="admin" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu</label>
                        <input name="password" type="password" class="form-control" value="1" />
                    </div>
                    <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />

                    <div class="text-danger">@Html.ValidationSummary()</div>

                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </form>

                <div class="alert alert-info text-center mt-3 mb-0">
                    Demo: <b>admin / 1</b>
                </div>
            </div>
        </div>
    </div>
</div>


