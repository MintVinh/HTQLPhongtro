@model HTQLPhongtro.Web.Models.HopDongTaoYeuCau

@{
    ViewData["Title"] = "Thêm hợp đồng";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Tao" method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Mã phòng <span class="text-danger">*</span></label>
            <input asp-for="MaPhong" class="form-control" type="number" />
            <span asp-validation-for="MaPhong" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mã khách hàng <span class="text-danger">*</span></label>
            <input asp-for="MaKhach" class="form-control" type="number" />
            <span asp-validation-for="MaKhach" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mã đặt cọc</label>
            <input asp-for="MaDatCoc" class="form-control" type="number" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Mã hợp đồng <span class="text-danger">*</span></label>
            <input asp-for="MaHopDongString" class="form-control" />
            <span asp-validation-for="MaHopDongString" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày bắt đầu <span class="text-danger">*</span></label>
            <input asp-for="NgayBatDau" class="form-control" type="date" />
            <span asp-validation-for="NgayBatDau" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày kết thúc <span class="text-danger">*</span></label>
            <input asp-for="NgayKetThuc" class="form-control" type="date" />
            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Tiền cọc <span class="text-danger">*</span></label>
            <input asp-for="TienCoc" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienCoc" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Giá thuê <span class="text-danger">*</span></label>
            <input asp-for="GiaThue" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GiaThue" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label">Chu kỳ thanh toán <span class="text-danger">*</span></label>
            <input asp-for="ChuKyThanhToan" class="form-control" type="number" min="1" max="12" />
            <span asp-validation-for="ChuKyThanhToan" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label">Ngày thanh toán <span class="text-danger">*</span></label>
            <input asp-for="NgayThanhToan" class="form-control" type="number" min="1" max="31" />
            <span asp-validation-for="NgayThanhToan" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
        <div class="col-12">
            <label class="form-label">File đính kèm</label>
            <input asp-for="FileDinhKem" class="form-control" />
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

