@model HTQLPhongtro.Web.Models.HopDongCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa hợp đồng";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaHopDong"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaHopDong"]" />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Ngày kết thúc <span class="text-danger">*</span></label>
            <input asp-for="NgayKetThuc" class="form-control" type="date" />
            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Giá thuê <span class="text-danger">*</span></label>
            <input asp-for="GiaThue" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GiaThue" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Chu kỳ thanh toán <span class="text-danger">*</span></label>
            <input asp-for="ChuKyThanhToan" class="form-control" type="number" min="1" max="12" />
            <span asp-validation-for="ChuKyThanhToan" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Ngày thanh toán <span class="text-danger">*</span></label>
            <input asp-for="NgayThanhToan" class="form-control" type="number" min="1" max="31" />
            <span asp-validation-for="NgayThanhToan" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
                <option value="Expired">Expired</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
        <div class="col-12">
            <label class="form-label">File đính kèm</label>
            <input asp-for="FileDinhKem" class="form-control" />
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

