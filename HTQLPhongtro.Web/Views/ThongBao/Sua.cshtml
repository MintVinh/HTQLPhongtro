@model HTQLPhongtro.Web.Models.ThongBaoCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa thông báo";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaThongBao"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaThongBao"]" />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Loại thông báo <span class="text-danger">*</span></label>
            <input asp-for="LoaiThongBao" class="form-control" />
            <span asp-validation-for="LoaiThongBao" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mức độ <span class="text-danger">*</span></label>
            <select asp-for="MucDo" class="form-select">
                <option value="Normal">Normal</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
            <span asp-validation-for="MucDo" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label class="form-label">Tiêu đề <span class="text-danger">*</span></label>
            <input asp-for="TieuDe" class="form-control" />
            <span asp-validation-for="TieuDe" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày hết hạn</label>
            <input asp-for="NgayHetHan" class="form-control" type="datetime-local" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Trạng thái</label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Hoạt động</option>
                <option value="false">Không hoạt động</option>
            </select>
        </div>
        <div class="col-12">
            <label class="form-label">Nội dung <span class="text-danger">*</span></label>
            <textarea asp-for="NoiDung" class="form-control" rows="5"></textarea>
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

