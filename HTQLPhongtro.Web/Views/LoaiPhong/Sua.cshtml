@model HTQLPhongtro.Web.Models.LoaiPhongCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa loại phòng";
    var maLoai = (int)(ViewData["MaLoai"] ?? 0);
}

<h2>@ViewData["Title"] (#@maLoai)</h2>

<form asp-action="Sua" asp-route-id="@maLoai" method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Tên loại</label>
            <input asp-for="TenLoai" class="form-control" />
            <span asp-validation-for="TenLoai" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mô tả</label>
            <input asp-for="MoTa" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Giá gốc min</label>
            <input asp-for="GiaThueGocMin" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Giá gốc max</label>
            <input asp-for="GiaThueGocMax" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Trạng thái</label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Kích hoạt</option>
                <option value="false">Ngưng</option>
            </select>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>


