@model HTQLPhongtro.Web.Models.LoaiPhongTaoYeuCau

@{
    ViewData["Title"] = "Tạo loại phòng";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Tao" method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Tên loại</label>
            <input asp-for="TenLoai" class="form-control" />
            <span asp-validation-for="TenLoai" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mô tả</label>
            <input asp-for="MoTa" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Giá gốc min</label>
            <input asp-for="GiaThueGocMin" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Giá gốc max</label>
            <input asp-for="GiaThueGocMax" class="form-control" />
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>


