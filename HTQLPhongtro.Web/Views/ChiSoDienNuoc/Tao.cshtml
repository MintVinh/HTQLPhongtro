@model HTQLPhongtro.Web.Models.ChiSoDienNuocTaoYeuCau

@{
    ViewData["Title"] = "Thêm chỉ số điện nước";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Tao" method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Mã phòng <span class="text-danger">*</span></label>
            <input asp-for="MaPhong" class="form-control" type="number" />
            <span asp-validation-for="MaPhong" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Tháng <span class="text-danger">*</span></label>
            <input asp-for="Thang" class="form-control" type="number" min="1" max="12" />
            <span asp-validation-for="Thang" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Năm <span class="text-danger">*</span></label>
            <input asp-for="Nam" class="form-control" type="number" min="2000" max="2100" />
            <span asp-validation-for="Nam" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Chỉ số điện cũ <span class="text-danger">*</span></label>
            <input asp-for="ChiSoDienCu" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ChiSoDienCu" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Chỉ số điện mới <span class="text-danger">*</span></label>
            <input asp-for="ChiSoDienMoi" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ChiSoDienMoi" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Chỉ số nước cũ <span class="text-danger">*</span></label>
            <input asp-for="ChiSoNuocCu" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ChiSoNuocCu" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Chỉ số nước mới <span class="text-danger">*</span></label>
            <input asp-for="ChiSoNuocMoi" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ChiSoNuocMoi" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày ghi <span class="text-danger">*</span></label>
            <input asp-for="NgayGhi" class="form-control" type="date" />
            <span asp-validation-for="NgayGhi" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Người ghi</label>
            <input asp-for="NguoiGhi" class="form-control" type="number" />
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

