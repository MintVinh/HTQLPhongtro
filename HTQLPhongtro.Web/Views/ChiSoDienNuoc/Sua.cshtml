@model HTQLPhongtro.Web.Models.ChiSoDienNuocCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa chỉ số điện nước";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaChiSo"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaChiSo"]" />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Chỉ số điện mới <span class="text-danger">*</span></label>
            <input asp-for="ChiSoDienMoi" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ChiSoDienMoi" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Chỉ số nước mới <span class="text-danger">*</span></label>
            <input asp-for="ChiSoNuocMoi" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ChiSoNuocMoi" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày ghi <span class="text-danger">*</span></label>
            <input asp-for="NgayGhi" class="form-control" type="date" />
            <span asp-validation-for="NgayGhi" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Người ghi</label>
            <input asp-for="NguoiGhi" class="form-control" type="number" />
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

