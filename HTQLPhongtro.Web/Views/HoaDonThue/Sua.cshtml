@model HTQLPhongtro.Web.Models.HoaDonThueCapNhatYeuCau

@{
    ViewData["Title"] = "Sửa hóa đơn thuê";
}

<h2>@ViewData["Title"] - Mã: @ViewData["MaHoaDon"]</h2>

<form asp-action="Sua" method="post" class="mt-3">
    <input type="hidden" name="id" value="@ViewData["MaHoaDon"]" />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Tiền phòng</label>
            <input asp-for="TienPhong" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienPhong" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền điện</label>
            <input asp-for="TienDien" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienDien" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền nước</label>
            <input asp-for="TienNuoc" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienNuoc" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền mạng</label>
            <input asp-for="TienMang" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienMang" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền rác</label>
            <input asp-for="TienRac" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienRac" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền gửi xe</label>
            <input asp-for="TienGuiXe" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienGuiXe" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền phạt</label>
            <input asp-for="TienPhat" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienPhat" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Giảm giá</label>
            <input asp-for="GiamGia" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GiamGia" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Unpaid">Unpaid</option>
                <option value="Paid">Paid</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày thanh toán</label>
            <input asp-for="NgayThanhToan" class="form-control" type="date" />
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

