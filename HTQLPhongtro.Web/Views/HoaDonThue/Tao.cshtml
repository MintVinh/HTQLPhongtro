@model HTQLPhongtro.Web.Models.HoaDonThueTaoYeuCau

@{
    ViewData["Title"] = "Thêm hóa đơn thuê";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Tao" method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Mã hợp đồng <span class="text-danger">*</span></label>
            <input asp-for="MaHopDong" class="form-control" type="number" />
            <span asp-validation-for="MaHopDong" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mã chỉ số</label>
            <input asp-for="MaChiSo" class="form-control" type="number" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Mã hóa đơn <span class="text-danger">*</span></label>
            <input asp-for="MaHoaDonString" class="form-control" />
            <span asp-validation-for="MaHoaDonString" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label class="form-label">Tháng <span class="text-danger">*</span></label>
            <input asp-for="Thang" class="form-control" type="number" min="1" max="12" />
            <span asp-validation-for="Thang" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label class="form-label">Năm <span class="text-danger">*</span></label>
            <input asp-for="Nam" class="form-control" type="number" min="2000" max="2100" />
            <span asp-validation-for="Nam" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền phòng <span class="text-danger">*</span></label>
            <input asp-for="TienPhong" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienPhong" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền điện <span class="text-danger">*</span></label>
            <input asp-for="TienDien" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienDien" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền nước <span class="text-danger">*</span></label>
            <input asp-for="TienNuoc" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienNuoc" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền mạng <span class="text-danger">*</span></label>
            <input asp-for="TienMang" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienMang" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền rác <span class="text-danger">*</span></label>
            <input asp-for="TienRac" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienRac" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền gửi xe <span class="text-danger">*</span></label>
            <input asp-for="TienGuiXe" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienGuiXe" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tiền phạt <span class="text-danger">*</span></label>
            <input asp-for="TienPhat" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TienPhat" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Giảm giá</label>
            <input asp-for="GiamGia" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GiamGia" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Hạn thanh toán <span class="text-danger">*</span></label>
            <input asp-for="HanThanhToan" class="form-control" type="date" />
            <span asp-validation-for="HanThanhToan" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

